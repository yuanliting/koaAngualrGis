{
  "compileOnSave": false,
  "compilerOptions": {
      "module": "commonjs",
      "target": "ES6",
      "noImplicitAny": true,
      "sourceMap": true,
      "preserveConstEnums": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "removeComments": true,
      "rootDir": "./src",
      "outDir": "./build",
      "pretty": false,
      "watch": false
  },
  "atom": {
      "rewriteTsconfig": true
  },
  "exclude": [
      "node_modules",
      "build",
      "docs"
  ],
  "include": [
      "./src/typings/*/*.d.ts",
      "./src/controller/*.ts",
      "./node_modules/@types/*/*.ts"
  ],
  "files": [
      "./src/app.ts"
  ],
  "filesGlob": [
      "./src/**/*.ts"
  ]
}